@model MagicVilla_Web.Models.Dto.RegistrationRequestDTO

<h1 class="text-center">Register</h1>
<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" type="text" placeholder="Username" class="form-control" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Name" type="text" placeholder="Name" class="form-control" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="text" placeholder="Password" class="form-control" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" value="submit" class="form-control btn-success">Register</button>
            </div>
        </div>
    </div>  
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}