@model MagicVilla_Web.Models.VM.VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container border p-3">
        <h3 class="text-info">Delete Villa Number</h3>
        <hr />
        <input hidden asp-for="VillaNumber.VillaNo"/>
        <div class="row">
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size:20px;">VillaNo</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" type="text" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.villaId" class="control-label pt-2" style="font-size:20px;">VillaID</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.villaId" disabled class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa--</option>
                </select>               
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;">SpecialDetails</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" type="text" readonly class="form-control" rows="5" ></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn btn-info form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
