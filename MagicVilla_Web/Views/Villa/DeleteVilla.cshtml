@model MagicVilla_Web.Models.Dto.VillaDTO

<form asp-action="DeleteVilla">
    <br />
    <div class="container border p-3">
        <h3 class="text-primary">Delete Villa</h3>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled type="text" class="form-control" />            
            </div>

            <div class="col-2">
                <label asp-for="Rate" class="control-label pt-2" style="font-size:20px;">Rate</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rate" disabled type="text" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Details" class="control-label pt-2" style="font-size:20px;">Details</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Details" disabled type="text" class="form-control" rows="5"></textarea>
            </div>
            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" disabled type="text" class="form-control" rows="5" />
            </div>
            <div class="col-2">
                <label asp-for="Occupancy" class="control-label pt-2" style="font-size:20px;">Occupancy</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Occupancy" disabled type="text" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Sqft" class="control-label pt-2" style="font-size:20px;">Sqft</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Sqft" disabled type="text" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Amenity" class="control-label pt-2" style="font-size:20px;">Amenity</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Amenity" disabled type="text" class="form-control"></textarea>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexVilla" asp-controller="villa" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}