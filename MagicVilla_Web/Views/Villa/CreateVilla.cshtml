@model MagicVilla_Web.Models.Dto.VillaCreateDTO

<form asp-action="CreateVilla">
    <br />
    <div class="container border p-3">
        <h3 class="text-primary">Create Villa</h3>
        <hr />

        <div class="row">
           
           @*  <div asp-validation-summary="ModelOnly" class="text-danger"> *@
                <div class="col-2">
                    <label asp-for="Name" class="control-label pt-2" style="font-size:20px;">Name</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Name" type="text" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
               
                <div class="col-2">
                    <label asp-for="Rate" class="control-label pt-2" style="font-size:20px;">Rate</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Rate" type="text" class="form-control" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label asp-for="Details" class="control-label pt-2" style="font-size:20px;">Details</label>
                </div>
                <div class="col-10 pb-3">
                    <textarea asp-for="Details" type="text" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="ImageUrl" type="text" class="form-control" rows="5" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label asp-for="Occupancy" class="control-label pt-2" style="font-size:20px;">Occupancy</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Occupancy" type="text" class="form-control" />
                    <span asp-validation-for="Occupancy" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label asp-for="Sqft" class="control-label pt-2" style="font-size:20px;">Sqft</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Sqft" type="text" class="form-control" />
                    <span asp-validation-for="Sqft" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label asp-for="Amenity" class="control-label pt-2" style="font-size:20px;">Amenity</label>
                </div>
                <div class="col-10 pb-3">
                    <textarea asp-for="Amenity" type="text" class="form-control" ></textarea>
                    <span asp-validation-for="Amenity" class="text-danger"></span>
                </div>
                <div class="col-5 offset-2">
                    <a asp-action="IndexVilla" asp-controller="villa" class="btn-primary btn form-control">Back to List</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Create" class="btn btn-success form-control"/>
                </div>
              
            @* </div> *@
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}